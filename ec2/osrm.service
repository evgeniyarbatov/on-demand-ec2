[Unit]
Description=Docker Compose Application
After=network.target docker.service
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/ubuntu
ExecStart=/usr/bin/docker-compose -f /home/ubuntu/docker-compose.yaml up -d
ExecStop=/usr/bin/docker-compose -f /home/ubuntu/docker-compose.yaml down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target